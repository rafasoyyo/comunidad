rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {

        function getAdminList(){
            return ['1gy12w8CO7Y3MffHeI4MSnFzlBQ2'];
        }

        function isAuth(){
            return request.auth != null;
        }

        function isAdmin(){
            return request.auth.uid in getAdminList();
        }

        function isUser(userId){
            return request.auth.uid == userId;
        }

        function hasAdminData(){
            return resource != null
                ? (request.resource.data.diff(resource.data).affectedKeys().hasAny(['admin']))
                : (request.resource.data.keys().toSet().hasAny(['admin']));
        }

        match /users/{userId} {
            allow get: if (isAuth() && (isUser(userId) || isAdmin()));
            allow write: if (isAuth() && (isAdmin() || (isUser(userId) && !hasAdminData())));
            allow list: if isAuth() && isAdmin();
        }

        match /events/{eventId}/{documents=**} {
            allow read, write: if isAuth();
        }

        match /notifications/{notificationId}/{documents=**} {
            allow read, write: if isAuth();
        }
    }
}